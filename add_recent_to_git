#/usr/bin/sh -e
FOLDERS="opencup/  codeforces/ codejam/ facebook hacker-rank russiancodecup snarknews topcoder marathon24"

find $FOLDERS -name "*.cpp" | xargs git add
find $FOLDERS -name "*.py" | xargs git add
find $FOLDERS -name "*.sh" | xargs git add
find $FOLDERS -name Makefile | xargs git add
find $FOLDERS -name "t[0-9]" | xargs git add
git status -uno | less -R
